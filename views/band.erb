<h1>Band: <%= @band.name %><h1>

<h3>Venues:</h3>

<% if @band.venues.any?() %>
<% @band.venues.each() do |venue| %>
<ul>
  <li><a href='/venue/<%=venue.id %>'><%= venue.venue_name() %></a></li>
</ul>
<%end%>
<%else%>
<p>There are no venues scheduled at this time</p>
<%end%>
<p><a href="/">Back to Home Page</a></p>
<div>
  <form action="/band/<%= @band.id() %>" method="post">
    <label for="deleted">Remove this band: </label>
    <input name="_method" type="hidden" value="delete" id="deleted">

    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
</div>
